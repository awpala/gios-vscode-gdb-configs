  "version": "0.2.0",
  "compounds": [
    {
      "name": "Transfer Server & Client",
      "configurations": [
        "Transfer Server",
        "Transfer Client",
      ],
      // "preLaunchTask": "clean & build all",
      "stopAll": false,
    },
    {
      "name": "Transfer Server & Client (No Asan)",
